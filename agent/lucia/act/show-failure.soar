# Desc:  This operator sees a failure action and reports it.
#        

#   Propose an operator to report the failure
sp {act*propose*show-failure
   (state <s> ^problem-space act
              ^action <action>)
   (<action> ^action FAILURE
             ^result <result>
             ^text <text>)
   (<result> ^interaction-status <i-status>)
-->
   (<s> ^operator <o> + =)
   (<o> ^name show-failure
        ^action <action>
        ^text <text>
        ^debug-info <text>)
}

sp {act*apply*show-failure
   (state <s> ^problem-space act
              ^operator <o>
              ^action <action>)
   (<o> ^name show-failure
        ^action <action>
        ^text <text>)
   (<action> ^result <result>
             ^next <next>)
-->
   #    Create a result
   (<s> ^result <action>)
   #   Go on to the next
   (<s> ^action <action> -
        ^action <next>)
}

