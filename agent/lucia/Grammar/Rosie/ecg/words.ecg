//	The following constructions were originally in the Common grammar
//	Specifiers
construction THIS
   subcase of DeicticPronoun
   form
      constraints
         self.f.orth <-- "this"
//   meaning
//      constraints
//         self.m.givenness <-- "deictic"

construction THAT-deictic
   subcase of DeicticPronoun
   form
      constraints
         self.f.orth <-- "that"
//   meaning
//      constraints
//         self.m.givenness <-- "deictic"

construction THAT-relative
   subcase of RelativePronoun
   form
      constraints
         self.f.orth <-- "that"
//   meaning
//      constraints
//         self.m.givenness <-- "relative-pronoun"

//  Determiners
construction THE
   subcase of Determiner
   form
      constraints
         self.f.orth <-- "the"
   meaning
      constraints
         self.m.givenness <-- "definite"

construction A
   subcase of Determiner
   form
      constraints
         self.f.orth <-- "a"
   meaning
      constraints
         self.m.givenness <-- "indefinite"

//  Pronouns
construction IT
   subcase of Pronoun
   constructional
     constraints
       self.features.case <-- "nom"
       self.features.number <-- "singular"
       self.features.person <-- "3rd"
   form
      constraints
         self.f.orth <-- "it"
   meaning
      constraints
         self.m.category <-- @inanimate

construction ONE-pronoun
   subcase of OnePronoun   // This can have modifiers
   constructional
     constraints
       self.features.case <-- "nom"
       self.features.number <-- "singular"
   form
      constraints
         self.f.orth <-- "one"
   meaning: Object

construction WE
   subcase of Pronoun, Agent
   constructional
     constraints
       self.features.case <-- "nom"
       self.features.number <-- "plural"
       self.features.person <-- "1st"
   form
      constraints
         self.f.orth <-- "we"
   meaning
      constraints
         self.m.category <-- @animate

//    To Be
construction IS
   subcase of FiniteToBe
   constructional
     constraints
        self.features.number <-- "sg"
        self.features.verbform <-- "finite"
   form
      constraints
         self.f.orth <-- "is"

construction ARE
   subcase of FiniteToBe
   constructional
     constraints
        self.features.number <-- "pl"
        self.features.verbform <-- "finite"
   form
      constraints
         self.f.orth <-- "are"

construction THERE-IS
   subcase of FiniteToBe
   constructional
     constraints
        self.features.number <-- "sg"
        self.features.verbform <-- "finite"
   form
      constraints
         self.f.orth <-- "there is"

//	Conjunctions
construction AND
   subcase of Conjunction
   form
      constraints
         self.f.orth <-- "and"

//	Answer words
construction YES
//  YES is being changed from a subcase of YesNo
//  to a subcase of YesWord.
//  This is necessary to handle properly the synonym
//  "ok", which is Games dev set sentence 003.
//  PL 3/25/2020
//   subcase of YesNo
   subcase of YesWord
   form
      constraints
         self.f.orth <-- "yes"

construction NO
   subcase of YesNo
   form
      constraints
         self.f.orth <-- "no"
   meaning
      constraints
         self.m.answer <-- "no"

//	Condition words
construction IF
   subcase of Word
   form
      constraints
         self.f.orth <-- "if"

construction THEN
   subcase of Word
   form
      constraints
         self.f.orth <-- "then"

construction UNTIL
   subcase of ConditionalPreposition
   form
      constraints
         self.f.orth <-- "until"
   meaning
      constraints
         self.m.name <-- "until1"

//	Question words
construction WHO
   subcase of InterrogativePronoun
   form
      constraints
         self.f.orth <-- "who"

construction WHAT
   subcase of InterrogativePronoun
   form
      constraints
         self.f.orth <-- "what"

construction WHEN
   subcase of InterrogativePronoun
   form
      constraints
         self.f.orth <-- "when"

construction WHERE
   subcase of InterrogativePronoun
   form
      constraints
         self.f.orth <-- "where"

