//  Concepts
schema Question
   subcase of Concept
   constraints
      rosie-category <-- concept
      concept-handle <-- question

schema Answer
   subcase of Concept
   constraints
      rosie-category <-- concept
      concept-handle <-- answer1

schema Response
   subcase of Concept
   constraints
      rosie-category <-- concept
      concept-handle <-- response

schema Message
   subcase of Concept
   constraints
      rosie-category <-- concept
      concept-handle <-- message
