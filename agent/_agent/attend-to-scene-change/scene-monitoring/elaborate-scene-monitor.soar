sp {topstate*elaborate*scene-monitor*case*uncertain
   (state <s> ^topstate <s>
              ^scene-monitor.object.property <prop>)
   (<prop> ^hypothesis <h1>
           ^hypothesis {<h2> <> <h1>})
   (<h1> ^best true
         ^lower-threshold <thresh>)
   (<h2> ^conf > <thresh>)
-->
   (<prop> ^case uncertain)
}

sp {topstate*elaborate*scene-monitor*case*certain
   (state <s> ^topstate <s>
              ^scene-monitor.object.property <prop>)
   (<prop> ^hypothesis <h1>)
   (<h1> ^best true
         ^lower-threshold <thresh>)
   -{(<prop> ^hypothesis {<h2> <> <h1>})
     (<h2> ^conf > <thresh>)}
-->
   (<prop> ^case certain)
}
