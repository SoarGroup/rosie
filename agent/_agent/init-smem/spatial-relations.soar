# can have some preposition already built in
# loads in basic definitions of left,right,behind,in front, in, and near

smem --add {
(<preps> ^list prepositions) #DO NOT comment out this smem intialization- it is necessary
(<games> ^list games)
#Comment out this to remove all built in prepositions/games
(<preps> ^prep in 
         ^prep on 
         ^prep above 
#         ^prep right-of
#         ^prep next-to
#         ^prep linear-with
         ^prep under 
         ^prep below
         ^prep smaller-than
         )
(<games> ^game tower-of-hanoi ^game frog-puzzle ^game 5-puzzle)
}

sp {spatial-reasoning*elaborate*initialize*prep-list
   (state <s> ^superstate nil)
-->
   (<s> ^prepositions <fp>)
   (<fp> ^prep.name in
         ^prep.name on
         ^prep.name above
#         ^prep.name right-of
#         ^prep.name next-to
#         ^prep.name linear-with
         ^prep.name under
         ^prep.name below
         ^prep.name smaller-than
         )
}

