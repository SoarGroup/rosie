########################################################################
# 
# Elaborate: held
#
########################################################################
sp {apply*any-op*mark*held*issued
   (state <s> ^topstate <s>
              ^operator <o>
              ^object <obj>
              ^io.output-link.pick-up <pickup>)
   (<pickup> ^object-id <id>)
   (<obj> ^id <id>)
-->
   (<obj> ^held issued)
}

sp {apply*any-op*mark*held*true
   (state <s> ^topstate <s>
              ^operator <o>
              ^object <obj>
              ^io.input-link.self.action grab)
   (<obj> ^held issued)
-->
   (<obj> ^held issued -
          ^held true)
}

sp {apply*any-op*failure*remove*held
   (state <s> ^topstate <s>
              ^operator <o>
              ^object <obj>
              ^io.input-link.self.action failure)
   (<obj> ^held <held>)
-->
   (<obj> ^held <held> -)
}

sp {apply*any-op*finished*drop*remove*held
   (state <s> ^topstate <s>
              ^operator <o>
              ^object <obj>
              ^io.input-link.self <self>)
   (<self> ^action wait
           ^prev-action drop)
   (<obj> ^held true)
-->
   (<obj> ^held true -)
}

