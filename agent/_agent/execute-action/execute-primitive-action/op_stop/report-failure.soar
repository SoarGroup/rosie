#### Different failure cases that can arise during stop

# command-error: The stop command got an error status
sp {op_stop1*propose*report-failure*command-error
   (state <s> ^name op_stop1
              ^current-action.execution-operator.action-handle <handle>
              ^current-action.stop-command.status error)
-->
   (<s> ^operator <o> + > =)
   (<o> ^name report-failure
        ^failure-type command-error
        ^failure-info <handle>)
}

# execution-failed: The stop command got a failure status
sp {op_stop1*propose*report-failure*execution-failed
   (state <s> ^name op_stop1
              ^current-action.execution-operator.action-handle <handle>
              ^current-action.stop-command.status failure)
-->
   (<s> ^operator <o> + > =)
   (<o> ^name report-failure
        ^failure-type execution-failed
        ^failure-info <handle>)
}
