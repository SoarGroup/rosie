###############################################################################
#
# Inside the go-to-next-waypoint substate, this will put a drive-to-waypoint command on the output link
#
###############################################################################

sp {go-to-next-waypoint*propose*send-drive-xy-command*face
   (state <s> ^name go-to-next-waypoint
              ^current-action.position-set.next { <next> <> none }
              ^do-face true
              ^current-action.face-command.status success
             -^current-action.drive-command)
-->
   (<s> ^operator <o> + >)
   (<o> ^name send-drive-xy-command
        ^position <next>)
}

sp {go-to-next-waypoint*propose*send-drive-xy-command*no-face
   (state <s> ^name go-to-next-waypoint
              ^current-action.position-set.next { <next> <> none }
              ^do-face false
             -^current-action.drive-command)
-->
   (<s> ^operator <o> + >)
   (<o> ^name send-drive-xy-command
        ^position <next>)
}

sp {go-to-next-waypoint*apply*send-drive-xy-command
   (state <s> ^name go-to-next-waypoint
              ^operator.name send-drive-xy-command
              ^top-state.io.output-link <out>
              ^current-action <a>)
   (<o> ^name send-drive-xy-command
        ^position <pos>)
   (<pos> ^x <x> ^y <y>)
-->
   (<out> ^do-control-law <law>)
   (<law> ^name drive-xy
          ^parameters <params>
          ^termination-condition.name stabilized)
   (<params> ^x <x> ^y <y>)
   (<a> ^drive-command <law>)
}
