sp {action*selection*propose*report-policy-learning-needed*top-selection
   (state <s> ^name selection
              ^problem-space.name action
              ^problem-space.learning.type exploration
              ^superstate.problem-space <ssps>
              ^impasse tie
              ^attribute operator
              ^top-state.action-stack.top <action>)
   (<action> -^policy-learning-needed)
-->
   (<s> ^operator <o> + =, >)
   (<o> ^name report-policy-learning-needed)
}

sp {action*selection*apply*report-policy-learning-needed*mark*needed
   (state <s> ^name selection
              ^operator.name report-policy-learning-needed
              ^quiescence t
              ^top-state.action-stack.top <action>)
-->
   (<action> ^policy-learning-needed true)
}
