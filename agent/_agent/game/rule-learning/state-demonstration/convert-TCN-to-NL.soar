           ^object3 <objd3>
           ^a <aspec> 
           ^b <bspec>
           ^c <cspec> 
           ^word <prep>
           ^prep <prep>
           ^order <c>
           ^negative <bool>)
   (<aspec> ^specifier the)
   (<bspec> ^specifier the)
   (<cspec> ^specifier the)
}
