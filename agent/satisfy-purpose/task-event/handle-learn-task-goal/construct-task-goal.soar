sp {handle-learn-task-goal*propose*construct-task-goal
   (state <s> ^name handle-learn-task-goal
              ^goal-message <msg>
             -^task-goal)
-->
   (<s> ^operator <o> +)
   (<o> ^name construct-task-goal
        ^goal-message <msg>
        ^result-name task-goal)
}

sp {handle-learn-task-goal*elaborate*construct-task-goal*conditions
   (state <s> ^name handle-learn-task-goal
              ^operator <o> +
              ^conditions <conds>)
   (<o> ^name construct-task-goal)
-->
   (<o> ^conditions <conds>)
}


