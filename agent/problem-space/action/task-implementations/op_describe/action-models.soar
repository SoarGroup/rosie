              ^operator <o>
              ^world <w>)
   (<o> ^name op_describe1 
        ^arg1.id <obj>
       -^arg2)
   (<w> ^objects.object <person>
        ^predicates.predicate <heard>)
   (<person> ^predicates.is-visible1 visible1)
   (<heard> ^handle heard2)
   -{(<heard> ^instance <heard-i>)
