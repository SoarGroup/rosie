### Internally modeling the turn-on task ###

sp {problem-space*action*internal*elaborate*op_flip-on1*known-action-model
   (state <s> ^problem-space.execution-type internal
              ^operator <o> +)
   (<o> ^name op_flip-on1)
-->
   (<o> ^known-action-model true)
}

# Change the predicate from off2 to on2
sp {problem-space*action*internal*apply*op_flip-on1*add*on2*predicate
   (state <s> ^problem-space.name action
              ^problem-space.execution-type internal
              ^operator <op>)
   (<op> ^name op_flip-on1 
         ^arg1.id.predicates <preds>)
   (<preds> ^<prop> off2)
-->
   (<preds> ^<prop> off2 -
            ^<prop> on2)
}

