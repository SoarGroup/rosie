sp {op_explore1*elaborate*until-clause*from*task-operator
   (state <s> ^name op_explore1
              ^task-operator.until-clause <until>)
-->
   (<s> ^until-clause <until>)
}

#### CUSTOM GOAL HANDLING ####

sp {op_explore1*elaborate*desired
   (state <s> ^name op_explore1
             -^copy-task-goal
              ^task-operator.current-goal explore1goal1)
-->
   (<s> ^desired <des>)
   (<des> ^handle explore1goal1 ^pred-count 0)
}

# If until-clause is satisfied, then the goal is finished
sp {op_explore1*execute*elaborate*desired*satisfied
   (state <s> ^name op_explore1
              ^problem-space.execution-type external
              ^desired <des>
              ^until-clause.satisfied true)
   (<des> ^handle explore1goal1)
-->
   (<des> ^satisfied true)
}

# If there is no until clause, wait until all waypoints are visited
sp {op_explore1*execute*elaborate*desired*satisfied*no*until
   (state <s> ^name op_explore1
              ^problem-space.execution-type external
              ^desired <des>
             -^until-clause
             -^unvisited-waypoint)
   (<des> ^handle explore1goal1)
-->
   (<des> ^satisfied true)
}

### Failure ###

sp {op_explore1*elaborate*current-segment*status*failure*unsatisfied*until-clause
   (state <s> ^name op_explore1
              ^current-task-segment <seg>
              ^until-clause <until>
              ^world.robot.current-waypoint.handle <wp-handle>
             -^unvisited-waypoint)
   (<seg> ^visited <wp-handle>)
-->
   (<seg> ^unrecoverable-failure explore-exhausted)
}

### Waypoint Distance Map Elaborations

sp {execute-explore*elaborate*distance-map
   (state <s> ^name op_explore1)
-->
   (<s> ^distance-map <map>)
}

sp {execute-explore*elaborate*distance-map*distance*0
   (state <s> ^name op_explore1
              ^distance-map <map>
              ^world.robot.current-waypoint.handle <wp-handle>)
-->
   (<map> ^<wp-handle> 0)
}

sp {execute-explore*elaborate*distance-map*neighbors
   (state <s> ^name op_explore1
              ^distance-map <map>
              ^top-state.maps.map.waypoint <wp>
              ^world.robot.current-waypoint.handle <any>)
   (<map> ^<wp-handle> <d>)
   (<wp> ^handle <wp-handle>
         ^next.handle <next-handle>)
   -{(<map> ^<next-handle> <= <d>)}
-->
   (<map> ^<next-handle> (+ <d> 1))
}

sp {execute-explore*elaborate*unvisited-waypoint
   (state <s> ^name op_explore1
              ^distance-map.<wph> <dist>
             -^current-task-segment.visited <wph>)
-->
   (<s> ^unvisited-waypoint <wph>)
}

