### Internally modeling the close task ###

sp {problem-space*action*internal*elaborate*op_close1*known-action-model
   (state <s> ^problem-space.execution-type internal
              ^operator <o> +)
   (<o> ^name op_close1)
-->
   (<o> ^known-action-model true)
}

# Change the predicate from open2 to closed2
sp {problem-space*action*internal*apply*op_close1*make*closed
   (state <s> ^problem-space.name action
              ^problem-space.execution-type internal
              ^operator <op>)
   (<op> ^name << op_close1 send-close-command >>
         ^arg1.id.predicates <preds>)
   (<preds> ^<prop> open2)
-->
   (<preds> ^<prop> open2 -
            ^<prop> closed2)
}
