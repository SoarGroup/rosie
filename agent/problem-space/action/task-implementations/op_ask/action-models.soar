### Internally modeling the ask task ###

sp {problem-space*action*internal*elaborate*op_ask1*known-action-model
   (state <s> ^problem-space.execution-type internal
              ^operator <o> +)
   (<o> ^name op_ask1)
-->
   (<o> ^known-action-model true)
}

# Add a new answered object to the state
sp {problem-space*action*internal*apply*op_ask1*add*answer*entity*to*world
   (state <s> ^problem-space.name action
              ^problem-space.execution-type internal
              ^operator <o>
              ^world.objects <objs>)
   (<o> ^name op_ask1
        ^arg1.id.predicates.sentence <sent>)
-->
   (<objs> ^object <obj>)
   (<obj> ^handle (make-constant-symbol |obj|)
          ^predicates <preds>)
   (<preds> ^category entity1
            ^modifier1 answered1)
}

# Remove any other answers from the world
sp {problem-space*action*internal*apply*op_ask1*remove*answered*modifier
   (state <s> ^problem-space.name action
              ^problem-space.execution-type internal
              ^operator <o>
              ^world.objects.object <obj>)
   (<obj> ^predicates <preds>)
   (<preds> ^modifier1 answered1)
-->
   (<preds> ^modifier1 answered1 -)
}

