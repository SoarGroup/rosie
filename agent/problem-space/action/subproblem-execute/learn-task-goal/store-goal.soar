### store-goal: Once the goal is added to the TCN, we store it

sp {learn-task-goal*propose*store-goal
   (state <s> ^name learn-task-goal
              ^goal-node <goal>
             -^stored <goal>)
-->
   (<s> ^operator <o> + <)
   (<o> ^name store-goal)
}

sp {learn-goal-definitino*apply*store-goal*create*store*smem*command
   (state <s> ^name learn-task-goal
              ^operator.name store-goal
              ^to-store <id>
              ^smem.command <cmd>)
-->
   (<cmd> ^store <id>)
}

sp {learn-goal-definitino*apply*store-goal*success*mark*stored
   (state <s> ^name learn-task-goal
              ^operator.name store-goal
              ^to-store <id>
              ^smem.result.success <id>)
-->
   (<s> ^stored <id>)
}

