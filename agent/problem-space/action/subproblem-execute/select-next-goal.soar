   (state <s> ^name select-next-goal
              ^subtask-tcn <sub-tcn>)
   (<sub-tcn> ^op_name op_remember1
              ^arg1.id <obj1>
              ^arg2.id <obj2>
             -^arg3)
-->
   (<s> ^object-slot <obj1> <obj2>)
}

sp {subproblem*execute*select-next-goal*elaborate*object-slot*subtask*object
   (state <s> ^name select-next-goal
              ^subtask-tcn <sub-tcn>)
   (<sub-tcn> -^op_name op_remember1
               ^<arg-name> <arg>)
   (<arg> ^arg-type object
         -^abstract true
          ^id <obj-slot>)
-->
