### GENERALIZE MODIFIER

# default match - copy the predicates onto a default rep
sp {task-utils*generalize-task-argument*propose*generalize-task-argument*modifier*default
  (state <s> ^generalize-task-argument <arg>)
  (<arg> ^arg-type modifier
         ^instantiation.handle <handle>
        -^general-arg-rep)
-->
  (<s> ^operator <o> + =)
  (<o> ^name generalize-task-argument
       ^argument <arg>
       ^arg-type modifier
       ^match-type default
       ^predicate-handle <handle>)
}

sp {task-utils*generalize-task-argument*apply*generalize-task-argument*modifier*default
  (state <s> ^operator <o>)
  (<o> ^name generalize-task-argument
       ^argument <arg>
       ^arg-type modifier
       ^match-type default
       ^predicate-handle <handle>)
-->
  (<arg> ^general-arg-rep <rep>)
  (<rep> ^id <mod-slot>)
  (<mod-slot> ^default <def>)
  (<def> ^predicate-handle <handle>)
}
