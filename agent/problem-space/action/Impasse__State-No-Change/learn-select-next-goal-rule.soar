sp {task-state-no-change*propose*learn-select-next-goal-rule
   (state <s> ^name task-state-no-change
              ^current-goal <goal-h>
              ^goal-id.next <next>
              ^desired.satisfied true)
-->
   (<s> ^operator <o> + =)
   (<o> ^name learn-select-next-goal-rule
        ^goal-handle <goal-h>
        ^next-goal-link <next>)
}

sp {task-state-no-change*reject*learn-select-next-goal-rule*learned
   (state <s> ^name task-state-no-change
              ^operator <o> +)
   (<o> ^name learn-select-next-goal-rule
        ^next-goal-link.learned true)
-->
   (<s> ^operator <o> -)
}

sp {task-state-no-change*reject*learn-select-next-goal-rule*ignore-goal
   (state <s> ^name task-state-no-change
              ^ignore-goal <goal>
              ^operator <o> +)
   (<o> ^name learn-select-next-goal-rule
        ^next-goal-link <goal>)
-->
   (<s> ^operator <o> -)
}
