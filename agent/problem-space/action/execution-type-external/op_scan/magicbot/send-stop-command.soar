###############################################################################
#
# Inside the execute-scan1 substate, this will put a stop command on the output link
#    if the until-clause is satisfied
#
###############################################################################

sp {op_scan1*propose*send-stop-command
   (state <s> ^name op_scan1
              ^problem-space.execution-type external
              ^until-clause.satisfied true
             -^current-action.stop-command)
-->
   (<s> ^operator <o> +)
   (<o> ^name send-stop-command)
}

sp {op_scan1*apply*send-stop-command
   (state <s> ^name op_scan1
              ^operator.name send-stop-command
              ^current-action <a>
              ^top-state.io.output-link <out>)
-->
   (<out> ^do-control-law <law>)
   (<law> ^name stop
          ^termination-condition.name stabilized)
   (<a> ^stop-command <law>)
}
