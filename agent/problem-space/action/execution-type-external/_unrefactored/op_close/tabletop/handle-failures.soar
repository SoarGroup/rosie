sp {op_close1*propose*handle-command-failure
   (state <s> ^name op_close1
              ^current-action <a>)
   (<a> ^close-command <cmd>)
   (<cmd> ^status error)
-->
   (<s> ^operator <o> + = >)
   (<o> ^name handle-command-failure
        ^category failure-handling
        ^action <a>
        ^command <cmd>)
}

sp {op_close1*propose*invalid-argument-failure
   (state <s> ^name op_close1
              ^problem-space.execution-type external
              ^current-action <a>
              ^target-object.predicates <preds>)
   (<preds> -^door2)
   (<a> ^execution-operator.arg1 <arg1>)
-->
   (<s> ^operator <o> + = >)
   (<o> ^name invalid-argument-failure
        ^category failure-handling
        ^action <a>
        ^arg-name arg1
        ^argument <arg1>
        ^missing-property door2)
}

