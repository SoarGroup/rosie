sp {elaborate*state*index-goal
   (state <s> ^name index-goal
   	      ^superstate.operator <sop>)
   (<sop> ^name index-goal
   	  ^information <info>
	  ^indexed-operator <iop>
	 ^learning-event <le>)
   (<iop> ^_metadata.map-id <met>)
   (<met> ^goal <gid>)
   -->
   (<s> ^information <info>
   	^map-id <met>
	^goal-id <gid>
	^indexed-operator <iop>
	^bit flip
	^learning-event <le>)
}

### store goal-id with the verb schema
#sp {index-goal*store*goal-id
#   (state <s> ^name index-goal
#   	      ^map-id <met>
#	      ^smem.command <scomm>)
#-->
