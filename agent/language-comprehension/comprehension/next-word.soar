sp {comprehension*propose*next-word
   (state <s> ^name comprehension
              ^segment <seg>)
   (<seg> ^input-sentence <sent>
          ^current-word <cw>)
   (<cw> ^processed true)
   (<sent> ^spelling
          -^processing-result failure)
-->
   (<s> ^operator <o> + =, <)
   (<o> ^name next-word)
}

