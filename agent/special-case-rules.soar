# AM: Don't pick up something if its already satisfying a relation goal predicate
#    Not sure if there is a better way to handle this 
#    (Otherwise it will try to pick up something that is already in a goal location)
sp {SPCASE*action*reject*op_pick-up1*in*goal
   (state <s> ^problem-space.name action
              ^operator <o> +
             -^child-task-segment
              ^desired.<gpnum> <gp>
              ^world.predicates.predicate <wpred>)
   (<o> ^name op_pick-up1
        ^arg1.id <obj1>)
   (<gp> ^type relation ^handle <ph> ^1 <obj1> ^2 <obj2>)
   (<wpred> ^handle <ph>
            ^instance <i>)
   (<i> ^1 <obj1> ^2 <obj2>)
-->
   (<s> ^operator <o> -)
}

sp {SPCASE*SHAME*reject*op_find1*drink
   (state <s> ^problem-space.subproblem search
              ^operator <o> +)
   (<o> ^name op_find1
        ^arg1.id <obj>)
   (<obj> ^root-category drink1)
-->
   (<s> ^operator <o> -)
}

sp {SPCASE*mark*remember*arg2*abstract*if*arg3
   (state <s> ^construct-task-argument <arg>
              ^construct-task-argument.arg-name arg3
              ^task-concept-network.handle remember1)
   (<arg2> ^arg-type object
           ^arg-name arg2)
-->
   (<arg2> ^abstract true)
}




